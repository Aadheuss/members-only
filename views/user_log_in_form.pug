extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='username') Username:
      input#username(type='text', placeholder='Enter your username' name='username' required value=(undefined===username ? '' : username))
    div.form-group
      label(for='password') password:
      input#password(type='password', placeholder='Enter your password' name='password' required value=(undefined===password ? '' : password))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
  if message 
    ul
      li!= message