extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='firstname') First name:
      input#firstname(type='text', placeholder='Enter your first name' name='first_name' required value=(undefined===user ? '' : user.first_name))
    div.form-group
      label(for='lastname') Last name:
      input#lastname(type='text', placeholder='Enter your last name' name='last_name' required value=(undefined===user ? '' : user.last_name))
    div.form-group
      label(for='username') Username:
      input#username(type='text', placeholder='Enter your username' name='username' required value=(undefined===user ? '' : user.username))
    div.form-group
      label(for='password') Password:
      input#password(type='password', placeholder='Enter your password' name='password' required value=(undefined===user ? '' : user.password))
    div.form-group
      label(for='password-confirmation') Confirm Password:
      input#password-confirmation(type='password', placeholder='Verify your password' name='password_confirmation' required value=(undefined===password_confirmation ? '' : password_confirmation))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
