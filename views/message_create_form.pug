extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='title') Title:
      input#title(type='text', placeholder='Enter title' name='title' required value=(undefined===message ? '' : message.title))
    div.form-group
      label(for='text') Text:
      textarea#text(placeholder='Enter text here...' name='text' required) #{undefined===message ? '' : message.text}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg