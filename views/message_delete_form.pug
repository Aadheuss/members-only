extends layout

block content

  h1 #{title}
  
  P Are you sure you want to delete this message?
  form(method='POST')
    div.form-group
      input#message_id.form-control(type='hidden', name='message_id', value=message._id )
    button.btn.btn-primary(type='submit') Delete

  if errors
    ul
      for error in errors
        li!= error.msg